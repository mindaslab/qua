<h1 class="grey-heading">Question</h1>
<div class="question">
  <div><%= raw qua_mark @question.content %></div>
  <div class="action">
    <ul class="tag-list">
    <% for tag in @question.tags %>
    <li><%= link_to tag.name, {controller: :tag, action: :questions, name: tag.name} %></li>
    <% end %>
  </ul>
    <%= link_to 'permalink', question_path(@question), class: 'btn btn-primary btn-mini'%>
    <% if @question.user == current_user %>
      <%= link_to 'edit', edit_question_path(@question), :class => 'btn btn-warning btn-mini' %>
      <%= link_to 'delete', question_path(@question), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger btn-mini' %>
    <% end %>
    <span class="little-info"><%= @question.created_at.to_s(:short) %></span>
  </div>
</div>