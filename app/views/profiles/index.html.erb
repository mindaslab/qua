<h1>Profiles</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.id %></td>
        <td><%= link_to profile.name, profile_path(profile) %></td>
        <td><%= profile.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_profile_path(profile), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', profile_path(profile), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_profile_path, :class => 'btn btn-primary' %>
